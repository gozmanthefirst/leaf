{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.{ts,tsx,js,jsx,json,jsonc,md}",
      "!node_modules",
      "!.next",
      "!dist",
      "!build",
      "!**/generated/**/*.{ts,tsx,js,jsx,json,jsonc,md}",
      "!**/*.gen.{ts,tsx,js,jsx,json,jsonc,md}",
      "!**/worker-configuration.d.ts",
      "!!**/dist/**/*.{ts,tsx,js,jsx,json,jsonc,md}",
      "!!**/build/**/*.{ts,tsx,js,jsx,json,jsonc,md}",
      "!!**/.output/**/*.{ts,tsx,js,jsx,json,jsonc,md}"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": "warn",
      "nursery": {
        "useSortedClasses": {
          "level": "info",
          "fix": "safe",
          "options": {
            "functions": ["cn", "clsx", "twMerge", "cva"]
          }
        }
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noUnknownAtRules": "warn"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "useSortedAttributes": "on",
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              [":URL:"],
              ":BLANK_LINE:",
              [":PACKAGE_WITH_PROTOCOL:"],
              [":BUN:", ":NODE:"],
              ":BLANK_LINE:",
              [":PACKAGE:"],
              ":BLANK_LINE:",
              [":ALIAS:", ":PATH:"]
            ]
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    },
    "linter": {
      "enabled": true
    }
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    },
    "parser": {
      "tailwindDirectives": true
    }
  }
}
