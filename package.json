{
  "name": "leaf",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "check": "biome check --write --unsafe --files-ignore-unknown=true",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.23",
    "@biomejs/biome": "2.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "trustedDependencies": [
    "@repo/db"
  ]
}
