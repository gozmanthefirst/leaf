{
  "name": "leaf",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "check": "biome check --write --unsafe --files-ignore-unknown=true",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.6.1",
    "typescript": "5.9.3"
  },
  "trustedDependencies": [
    "@repo/db"
  ],
  "packageManager": "bun@1.3.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
