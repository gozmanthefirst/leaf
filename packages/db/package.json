{
  "name": "@repo/db",
  "type": "module",
  "private": true,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/src/index.js"
    },
    "./validators/*": {
      "types": "./src/validators/*.ts",
      "default": "./dist/src/validators/*.js"
    }
  },
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc && tsc-alias",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:delete": "docker compose down -v",
    "db:psql": "docker exec -it leaf-pg psql -U user -d leaf",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^6.16.2",
    "@prisma/client": "^6.16.2",
    "dotenv": "^17.2.2",
    "dotenv-expand": "^12.0.2",
    "prisma-zod-generator": "^1.21.2",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.5.2",
    "prisma": "^6.16.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  }
}
