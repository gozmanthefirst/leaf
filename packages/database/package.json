{
  "name": "@repo/database",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./schemas/*": "./src/db/schemas/*.ts",
    "./validators/*": "./src/db/validators/*.ts"
  },
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:psql": "docker exec -it notes-pg psql -U user -d notes",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.5",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.8.3",
    "pg": "^8.16.3",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4"
  }
}
